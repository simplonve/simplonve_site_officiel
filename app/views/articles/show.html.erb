<div class="article">
	<div class='info_blog'>
		<div class="day">
      	 <%= @article.day %>
     	</div>
    	<div class='date_blog'>
   			<div class="month">
       			<%= @article.month %>
     		</div>
    		<div class="year">
       			<%= @article.year %>
    		</div>
    	</div>            
		<p class="title">
	 		<%= @article.title %>
		</p>
	</div>	 
	<p class="subtitle">
	  <%= @article.subtitle %>
	</p>
	<div class="content">
	  <%= simple_format @article.content%>
	</div>	
    <%= link_to (image_tag('home.png')), articles_path, :class => "home" %>
    <div class='icon_blog'>
		<%= link_to (image_tag('edit.png')), edit_article_path(@article) %>
		<%= link_to (image_tag('delete.png')), article_path(@article),
	              method: :delete,
	              data: { confirm: 'Etes-vous sÃ»r ?' } %>
	</div>              
</div>